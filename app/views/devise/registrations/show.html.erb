<div class="container">
  <div class="row">
    <br>
    <div class="col-xs-12 well">
      <div class="col-sm-3 col-xs-12">
        <div class="text-left">
          <img src=<%=@user.photo%> alt="user" class="avatar-bordered">
        </div>
        <div class="page-title">
          <h2><%=@user.first_and_last_name%></h2>
        </div>
        <div class="col-xs-12 well" style="background: #f2f2f2;">
          <p><%=@user.place.address%></p>
          <p><%=@user.place.postcode%></p>
          <p><%=@user.place.city%></p>
        </div>
      </div>
      <div class="col-sm-9 col-xs-12">
        <div class="col-xs-12">
          <div class="page-title">
            <h4>Friends</h4>
          </div>
          <% @friends.each do |friend| %>
            <div class="col-sm-3 text-center">
              <% if friend.in?(current_user.friends) %>
                <%= image_tag friend.photo, class: "avatar-large"%>
                <h5 class="col-xs-12"><a href="/user/<%=friend.id%>"><%= friend.first_name %></a></h5>
              <% else %>
                <%= image_tag friend.photo, class: "avatar-large"%>
                <h5 class="col-xs-12"><%= friend.first_name %></h5>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="col-xs-12">
          <div class="page-title">
            <h4>Shares</h4>
          </div>
          <% @shares.each do |share| %>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 padded2">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path share.item.photo, height: 280, width: 318, crop: :scale %>)">
                <div class="card-description">
                  <div class="col-xs-12">
                    <div class="text-left">
                    <h4><%=share.item.name%> </h4><h5><%=share.item.value%> GBP</h5>
                    </div>
                  </div>
                </div>
                <a class="card-link" href="../items/<%=share.item.id%>" ></a>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="text-right">
      <%= link_to "Back", :back, class: "btn btn-default" %>
    </div>
  </div>
</div>
