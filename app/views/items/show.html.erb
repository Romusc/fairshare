<div class="container">
  <div class="row">
    <br>
    <div class="col-xs-12 well">
      <div class="col-xs-6">
        <%= cl_image_tag @item.photo, height: 300, width: 400, crop: :fill %>
      </div>
      <div class="col-xs-6">
        <div class="col-xs-6">
          <h2><%= @item.name %></h2>
        </div>
        <div class="col-xs-6 text-right">
          <h2><%= @item.value %> GBP</h2>
        </div>
        <div class="col-xs-12">
          <p><%=@item.description%></p>
        </div>
        <br>
          <% if @shares != [] %>
            <table class="table">
              <thead>
                <th> User </th>
                <th> Postcode </th>
                <th> Ownership </th>
                <th> Spent </th>
                <th> Owed </th>
              </thead>
              <tbody>
                <% @shares.each do |share| %>
                  <% if @item.place.postcode == share.user.place.postcode %>
                    <tr class="highlighted">
                      <td><%= share.user.first_name %> <%= share.user.last_name %></td>
                      <td><%= share.user.place.postcode %></td>
                      <td><%= share.percentage.round(0) %> %</td>
                      <td><%= share.spent %> GBP</td>
                      <td><%= -(((@item.value)*(share.percentage/100)) - (share.spent)).round%> GBP </td>
                    </tr>
                  <% else %>
                    <tr>
                      <td><%= share.user.first_name %> <%= share.user.last_name %></td>
                      <td><%= share.user.place.postcode %></td>
                      <td><%= share.percentage.round(0) %> %</td>
                      <td><%= share.spent %> GBP</td>
                      <td><%= -(((@item.value)*(share.percentage/100)) - (share.spent)).round%> GBP </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          <% end %>
      </div>
    </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <h2>Bookings</h2>
      <div class="col-xs-12">
        <h3>New booking</h3>
          <%= simple_form_for [@item, @booking], :url => item_bookings_path(@item), :method => :post do |f| %>
            <%= f.input :start_time %>
            <%= f.input :end_time %>
            <%= f.submit %>
          <% end %>
        <h3>Calendar</h3>
        <%= month_calendar events: @bookings do |date, bookings| %>
          <%= date %>
          <% if @bookings %>
            <% @bookings.each do |booking| %>
              <div>
                <%= booking.user.first_name %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <% if @shares != [] %>
        <div id="map" style="width: 100%; height: 500px;"></div>
        <% content_for(:after_js) do %>
          <%= javascript_tag do %>
            $(document).ready(function() {
              var handler = Gmaps.build('Google');
              handler.buildMap({
                provider: {
                  disableDefaultUI: false,
                  <!-- add google maps options here -->
                },
                internal: {
                  id: 'map'
                }
              },
              function() {
                markers = handler.addMarkers(<%= raw @hash.to_json %>);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
                if (markers.length == 0) {
                  handler.getMap().setZoom(2);
                } else if (markers.length == 1) {
                  handler.getMap().setZoom(14);
                }
              });
              <!--  -->

              <!--  -->
            });
          <% end %>
        <% end %>
      <% end %>
      <div class="text-right"">
        <br>
        <%= link_to "< Back to My Fairshares", items_path, class: "btn btn-default btn-lg" %>
      </div>
    </div>
  </div>
</div>





