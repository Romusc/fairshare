

<div class="container">
  <div class="row">
    <div class="col-xs-12 well">
      <div class="col-xs-6">
        <%= cl_image_tag @item.photo, height: 300, width: 400, crop: :fill %>
      </div>
      <div class="col-xs-6">
        <div class="col-xs-6">
          <h2><%= @item.name %></h2>
        </div>
        <div class="col-xs-6 text-right">
          <h2><%= @item.value %> GBP</h2>
        </div>
        <div class="col-xs-12">
          <p><%=@item.description%></p>
        </div>
        <br>
        <table class="table">
          <thead>
            <th> User </th>
            <th> Postcode </th>
            <th> Ownership </th>
            <th> Spent </th>
            <th> Owed </th>
          </thead>
          <tbody>
            <% @item.shares.each do |share| %>
              <% if @item.place.postcode == share.user.place.postcode %>
                <tr class="highlighted">
                  <td><%= share.user.first_name %> <%= share.user.last_name %></td>
                  <td><%= share.user.place.postcode %></td>
                  <td><%= share.percentage.round(0) %> %</td>
                  <td><%= share.spent %> GBP</td>
                  <td><%= -(((@item.value)*(share.percentage/100)) - (share.spent)).round%> GBP </td>
                </tr>
              <% else %>
                <tr>
                  <td><%= share.user.first_name %> <%= share.user.last_name %></td>
                  <td><%= share.user.place.postcode %></td>
                  <td><%= share.percentage.round(0) %> %</td>
                  <td><%= share.spent %> GBP</td>
                  <td><%= -(((@item.value)*(share.percentage/100)) - (share.spent)).round%> GBP </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div id="map" style="width: 100%; height: 500px;"></div>
    <% content_for(:after_js) do %>
      <%= javascript_tag do %>
        $(document).ready(function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function() {
            markers = handler.addMarkers(<%= raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            if (markers.length == 0) {
              handler.getMap().setZoom(2);
            } else if (markers.length == 1) {
              handler.getMap().setZoom(14);
            }

            <!-- added by me, not in the lesson about JS and google maps -->

            markers.forEach(function(marker) {

              var uluru = {lat: -25.363, lng: 131.044};

              var infowindow = new google.maps.InfoWindow({
                content: "hey it's me! Mario!"
              });

              var test = new google.maps.Marker({
                position: uluru,
                map: map,
                title: 'Uluru (Ayers Rock)'
              });

              test.addListener('click', function() {
                infowindow.open(map, marker);
              });


            })

            <!-- end of added by me, not in the lesson about JS and google maps -->

          });
        });
      <% end %>
    <% end %>
    <div class="text-right"">
      <br>
      <div class="btn btn-default btn-lg">
        < Back to My Fairshares
      </div>
    </div>
  </div>
</div>





