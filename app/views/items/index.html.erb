<h1>Your items</h1>
<div class="container">
  <% @items.each do |item| %>
  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-4 col-xs-offset-2 text-center">
        <%= cl_image_tag item.photo, height: 300, width: 400, crop: :fill %>
      </div>
      <div class="col-xs-4">
        <div class="col-xs-6">
          <h2><%= item.name %></h2>
        </div>
        <div class="col-xs-6 text-right">
          <h2><%= item.value %> GBP</h2>
          <%= link_to "See Details", item_path(item), class: "btn btn-primary" %>
        </div>
        <br>
        <table class="table">
          <thead>
            <th> User </th>
            <th> Ownership </th>
            <th> Spent </th>
            <th> Owed </th>
          </thead>
          <tbody>
            <% item.shares.each do |share| %>
            <tr>
              <td><%= share.user.first_name %> <%= share.user.last_name %></td>
              <td><%= share.percentage.round(0) %> %</td>
              <td><%= share.spent %> GBP</td>
              <td><%= -(((item.value)*(share.percentage/100)) - (share.spent)).round%> GBP </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
