<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2> Your Friends (reciprocal friendships)</h2>
      <ul>
        <% @friends.each do |friend| %>
        <li>
          <%= friend.first_and_last_name %>
          <%= link_to "Remove", friendship_path(current_user.friendships.find_by_friend_id(friend.id)), :method => :delete, class: "btn btn-primary" %>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="col-xs-12">
      <h2> Friend requests (Those who have befriended you) </h2>
      <ul>
        <% @inverse_friends.each do |inverse_friend| %>
          <li>
            <%= inverse_friend.first_and_last_name %>
            <%= link_to "Accept Friendship", friendships_path(:friend_id => inverse_friend), :method => :post %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-xs-12">
      <h2> Friend requests (Friends you have added but who haven't accepted yet) </h2>
      <ul>
        <% @friends_requested.each do |friend_requested| %>
          <li>
            <%= friend_requested.first_and_last_name %>
            <%= link_to "Cancel request", friendship_path(current_user.friendships.find_by_friend_id(friend_requested.id)), :method => :delete, class: "btn btn-primary" %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-xs-12">
      <h2> Other Users </h2>
      <% @users.each do |user| %>
        <p> <%= user.first_and_last_name %> </p>
        <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
        <br>
        <br>
      <% end %>
    </div>
  </div>
</div>
