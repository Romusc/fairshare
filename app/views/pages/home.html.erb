<h1>Home</h1>
<div class="container">
  <div class="row">
    <%= link_to 'New item', new_item_path %>
  </div>
  <div class="row">
    <%= @items.each do |item| %>
    <div class="col-xs-4">
      <div class="col-xs-12">
        <%= cl_image_tag item.photo, height: 300, width: 400, crop: :fill %> </div>
      <div class="col-xs-6">
        <h3><%= item.name %></h3>
      </div>
      <div class="col-xs-6">
        <h3><%= item.value %> GBP </h3>
      </div>
      <div class="div-col-xs-12">
        <p><%= item.description %></p>
      </div>
    </div>
    <%end%>
  </div>
</div>
