<div class="container">
  <%= link_to "My Items", items_path, class: "btn btn-primary" %>
  <%= link_to "New Item", new_item_path, class: "btn btn-primary" %>
  <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-warning" %>
  <%= link_to "Add Friends", friendships_path, class: "btn btn-warning" %>
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
    <div class="col-xs-12 well">
        <%= cl_image_tag item.photo, height: 280, width: 318, crop: :scale %>
      <div class="col-xs-6 text-left">
        <h3><%= item.name %></h3>
      </div>
      <div class="col-xs-6 text-right">
        <h3><%= item.value %> GBP </h3>
      </div>
    </div>
    </div>
    <%end%>
  </div>
</div>
